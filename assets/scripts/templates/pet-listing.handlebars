{{#each pets as |pet|}}
  {{log pet}}
  <section data-id="{{pet.id}}">
    <h6>Name:</h6>
    <h3>
      {{limit pet.name 15}}
    </h3>
    <h6>Breed:</h6>
    <h3>
      {{limit pet.breed 15}}
    </h3>
    <h6>Description:</h6>
    <p>
      {{#if pet.description}}
        {{pet.description}}
      {{else}}
        No description provided.
      {{/if}}
    </p>
    {{> partial pet=pet}}
  </section>

{{/each}}
